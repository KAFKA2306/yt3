{
  "extends": ["@tsconfig/bun", "@tsconfig/strictest"],
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "types": ["bun"],
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}
